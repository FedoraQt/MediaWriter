{
    "id": "org.fedoraproject.MediaWriter",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15",
    "sdk": "org.kde.Sdk",
    "command": "mediawriter",
    "finish-args": [
        "--socket=x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=host",
        "--share=network",
        "--share=ipc",
        "--system-talk-name=org.freedesktop.UDisks2",
        "--env=QML2_IMPORT_PATH=/app/lib/qt5/qml"
    ],
    "modules": [
        {
            "name": "Adwaita-qt",
            "buildsystem": "cmake",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/FedoraQt/adwaita-qt.git"
                },
                {
                    "type": "shell",
                    "commands": [
                        "sed -i 's@add_subdirectory(style)@#add_subdirectory(style)@' src/CMakeLists.txt"
                    ]
                }
            ]
        },
        {
            "name": "MediaWriter",
            "buildsystem": "qmake",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/FedoraQt/MediaWriter.git",
                    "branch": "master"
                },
                {
                    "type": "shell",
                    "commands": [
                        "sed -i 's@\$\$\\[QT_INSTALL_QML\\]@/app/lib/qt5/qml@' theme/theme.pro"
                    ]
                }
            ]
        }
    ]
}
